{
    "name": "aoe/imgix",
    "type": "typo3-cms-extension",
    "description": "Provides the Auto Responsive Images feature of imgix called imgix.fluid()",
    "homepage": "https://github.com/AOEpeople/TYPO3-Imgix",
    "support": {
        "issues": "https://github.com/AOEpeople/TYPO3-Imgix/issues"
    },
    "license": "GPL-3.0",
    "authors": [
        {
            "name": "AOE GmbH",
            "email": "dev@aoe.com",
            "homepage": "https://www.aoe.com/",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^7.4",
        "ext-json": "*",
        "ext-curl": "*",
        "typo3/cms-core": "^11.5",
        "typo3/cms-fluid": "^11.5",
        "typo3/cms-extbase": "^11.5"
    },
    "require-dev": {
        "nimut/testing-framework": "^6.0",
        "phpunit/phpcov": "*",
        "squizlabs/php_codesniffer": "*",
        "sebastian/phpcpd": "*",
        "phpmd/phpmd": "*"
    },
    "repositories": [
        {
            "type": "git",
            "url": "https://github.com/AOEpeople/TYPO3-Imgix.git"
        }
    ],
    "autoload": {
        "psr-4": {
            "Aoe\\Imgix\\": "Classes/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Aoe\\Imgix\\Tests\\": "Tests"
        }
    },
    "config": {
        "allow-plugins": {
            "composer/package-versions-deprecated": true,
            "cweagans/composer-patches": true,
            "typo3/class-alias-loader": true,
            "typo3/cms-composer-installers": true
        },
        "vendor-dir": ".Build/vendor",
        "bin-dir": ".Build/bin"
    },
    "scripts": {
        "post-autoload-dump": [
            "mkdir -p .Build/Web/typo3conf/ext/",
            "[ -L .Build/Web/typo3conf/ext/imgix ] || ln -snvf ../../../../. .Build/Web/typo3conf/ext/imgix"
        ],
        "test:unit": [
            "[ -e .Build/bin/phpunit ] || composer update",
            "TYPO3_PATH_ROOT=.Build/Web .Build/bin/phpunit -c .Build/vendor/nimut/testing-framework/res/Configuration/UnitTests.xml Tests/Unit/"
        ],
        "test:functional": [
            "[ -e .Build/bin/phpunit ] || composer update",
            "TYPO3_PATH_ROOT=.Build/Web .Build/bin/phpunit -c .Build/vendor/nimut/testing-framework/res/Configuration/FunctionalTests.xml Tests/Functional/"
        ],
        "test:functional-devbox": [
            "[ -e .Build/bin/phpunit ] || composer update",
            "TYPO3_PATH_WEB=.Build/Web typo3DatabaseName=\"t3_congo_dev\" typo3DatabaseHost=\"localhost\" typo3DatabaseUsername=\"root\" typo3DatabasePassword=\"root\" .Build/bin/phpunit -c .Build/vendor/nimut/testing-framework/res/Configuration/FunctionalTests.xml Tests/Functional/"
        ]
    },
    "scripts-descriptions": {
        "test:unit": "Run unit-tests - example to run only SOME unit-tests: composer test:unit -- --filter ConfigurationTest",
        "test:functional": "Run functional-tests (use this command on github)",
        "test:functional-devbox": "Run functional-tests (use this command on devbox) - example to run only SOME functional-tests: composer test:functional-devbox -- --filter PurgeImgixCacheControllerTest"
    },
    "extra": {
        "typo3/cms": {
            "extension-key": "imgix",
            "cms-package-dir": "{$vendor-dir}/typo3/cms",
            "web-dir": ".Build/Web"
        }
    }
}
